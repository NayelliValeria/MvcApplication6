<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" >

    <!-- Core CSS - Include with every page -->
    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/font-awesome/css/font-awesome.css")" rel="stylesheet">

    <!-- SB Admin CSS - Include with every page -->
    <link href="@Url.Content("~/Content/css/sb-admin.css")" rel="stylesheet">
    
    <!-- Core Scripts - Include with every page -->
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/metisMenu/jquery.metisMenu.js")"></script>

    <!-- SB Admin Scripts - Include with every page -->
    <script src="@Url.Content("~/Scripts/sb-admin.js")"></script>
    <script src="@Url.Content("~/Scripts/mascaras.js")"></script>
</head>

<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0">

            <div class="navbar-header">
                <b><i>Bienvenid@@ </i></b> @Session["nombre"] @Session["apellidos"]
            </div>

            <!-- Sesion de usuario -->
            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#">
                                <i class="fa fa-user fa-fw"></i> Perfil de usuario
                            </a>
                        </li>
                        <li><a href="#"><i class="fa fa-gear fa-fw"></i> Configuración </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="/Sesion/Logout">
                                <i class="fa fa-user fa-fw"></i>Salir
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>

            <!--Menu principal-->
            <div class="navbar-default navbar-static-side" role="navigation">
                <div class="sidebar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="#"><i class="fa fa-table fa-fw"></i> Candidatos<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li> @Html.ActionLink("Consultar", "ConsultarCandidatos", "Candidato")</li>
                                <li> @Html.ActionLink("Agregar", "Create", "Candidato")</li> 
                            </ul>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-wrench fa-fw"></i>Tecnologías<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li> @Html.ActionLink("Consultar", "Details", "Tecnologia")</li>
                                <li> @Html.ActionLink("Agregar", "Create", "Tecnologia")</li>
                            </ul>
                        </li>
                        @if ((int)Session["permisos"] == 1)
                        {
                            <li>
                                <a href="#"><i class="fa fa-edit fa-fw"></i> Reclutadores<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li> @Html.ActionLink("Consultar", "Details", "Reclutador")</li>
                                    <li> @Html.ActionLink("Agregar", "Create", "Reclutador")</li>
                                </ul>
                            </li>        
                        }
                    </ul>
                </div>
            </div>
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">@ViewBag.Title</h1>
                </div>
            </div>
            <div class="row">
                @RenderSection("featured", required: false)
                @RenderBody()
            </div>
        </div>

    </div>
    
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year</p>
            </div>
        </div>
    </footer>

</body>

</html>

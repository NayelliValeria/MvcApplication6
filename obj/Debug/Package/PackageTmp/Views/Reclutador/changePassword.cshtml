@model MvcApplication6.Models.reclutador

@{
    ViewBag.Title = "Cambiar contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="@Url.Content("~/Scripts/changePassword.js")"></script>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">@ViewBag.Title</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm())
                        {
                            @Html.ValidationSummary(true, "Campos con valores no validos.")
                             <span id="resultado"></span>
                             <form role="form">
                                 <div class="form-group">
                                     @Html.Label("Contraseña actual:")
                                     @Html.Password("actual","",  new { @class = "form-control"})
                                     <span class="field-validation-valid" id="actual_val"></span>
                                 </div>
                                 <div class="form-group">
                                     @Html.Label("Nueva contraseña:")
                                     @Html.Password("nueva1","", new { @class = "form-control"})
                                     <span class="field-validation-valid" id="nueva1_val"></span>
                                 </div>
                                 <div class="form-group">
                                     @Html.Label("Confirme su nueva contraseña:")
                                     @Html.Password("nueva2","", new { @class = "form-control"})
                                     <span class="field-validation-valid" id="nueva2_val"></span>
                                 </div>
                                 <div class="boton">
                                     <input type="button" value="Guardar" class="btn btn-default" id="enviar"/>
                                 </div>
                             </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



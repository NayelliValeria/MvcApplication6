@model MvcApplication6.Models.reclutador
@{
    ViewBag.Title = "Eliminar reclutador...";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>¿Está seguro de querer eliminar a este reclutador?</h3>
                Si elimina a este reclutador, la información no podrá ser recuperada.
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="">
                        @using (Html.BeginForm())
                        {
                             @Html.ValidationSummary(true, "")
                             <form role="form">
                                 <div class="col-xs-6 form-group">
                                     @Html.LabelFor(model => model.persona.nombre)
                                     @Html.DisplayFor(model => model.persona.nombre, new { @class = "form-control" })
                                 </div>
                                 <div class="col-xs-6 form-group">
                                     @Html.LabelFor(model => model.persona.apePaterno)
                                     @Html.DisplayFor(model => model.persona.apePaterno, new { @class = "form-control" })
                                 </div>
                                 <div class="col-xs-6 form-group">
                                     @Html.LabelFor(model => model.persona.apeMaterno)
                                     @Html.DisplayFor(model => model.persona.apeMaterno, new { @class = "form-control" })" })
                                 </div>
                                 <div class="col-xs-6 form-group">
                                     <label>Permisos:</label>
                                     @if(Model.permisos==1)
                                     {
                                         <p>Administrador</p>
                                     }else{
                                         <p>Reclutador</p>
                                     }
                                 </div>
                                 <div class="boton">
                                     <input type="submit" value="Eliminar" class="btn btn-default" />
                                 </div>
                             </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


